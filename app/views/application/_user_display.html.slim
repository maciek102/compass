.user-display
  - if current_user.superadmin?
    = render 'superadmin/superadmin_menu'

  .user-menu
    = user_display_image(current_user)

    .info
      .name
        = current_user.name.presence

      .desc
        = current_user.organization.name
        /= current_user.try(:role).presence || "UÅ¼ytkownik"
    
    .logout
      = link_to fa_icon("sign-out"), destroy_user_session_path, method: :delete
