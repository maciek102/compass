tr.table-row id="offer-row-#{el.id}" data-url=offer_path(el)
  td = "##{el.id_by_org}"
  td
    = status_label(t("activerecord.attributes.offer.statuses.#{el.status}"), style: "background-color: #{el.status_color};")
    .bold = el.number
  td = fast_link(client_path(el.client), text: el.client.name)
  td = "#{show_price(el.current_calculation.total_net)} / #{show_price(el.current_calculation.total_gross)}" 
  td = l(el.created_at, format: :short)
  td
    .actions
      = resource_turbo_edit_link(el)
      = resource_destroy_link(el)